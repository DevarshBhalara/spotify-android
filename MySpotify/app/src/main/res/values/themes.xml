<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.MySpotify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">#FF1DB954</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorSecondaryContainer">#222222</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorSurface">#373737</item>
    </style>

    <style name="Theme.MySpotify" parent="Base.Theme.MySpotify">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextViewTitle" parent="Base.Theme.MySpotify">
        <item name="android:textColor"> @color/whitePure </item>
        <item name="android:textSize"> @dimen/sp_16 </item>
    </style>

    <style name="TextViewSubTitle" parent="Base.Theme.MySpotify">
        <item name="android:textColor"> @color/grey </item>
        <item name="android:textSize"> @dimen/sp_14 </item>
    </style>
</resources>